{
    "name": "brentleavitt/learndash-nbcs",
    "description": "LearnDash for New Beginnings Childbirth Services",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.13",
        "wp-coding-standards/wpcs": "^3.2",
        "10up/wp_mock": "^1.1"
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcbf": "phpcbf --standard=phpcs.xml",
        "lint": "find app -type f -name '*.php' -print0 | xargs -0 -n1 -P4 php -l",
        "analyze": "composer test && composer phpcs"
    },
    "autoload": {
        "psr-4": {
            "Doula_Course\\": "app/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
